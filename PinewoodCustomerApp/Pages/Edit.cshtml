@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container">
    <div class="text-center">
        <h1>Edit Customer</h1>
    </div>

    @if (Model.Customer != null)
    {
        <form method="post" class="form-horizontal">
            <!-- Hidden field for Customer ID -->
            <input type="hidden" asp-for="Customer.Id" />

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-end">Name:</label>
                <div class="col-sm-6">
                    <input asp-for="Customer.FullName" class="form-control" />
                    <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-end">Phone Number:</label>
                <div class="col-sm-6">
                    <input asp-for="Customer.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-end">Email:</label>
                <div class="col-sm-6">
                    <input asp-for="Customer.Email" class="form-control" type="email" />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 text-center">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    }
    else
    {
        <p>No customer found.</p>
    }
</div>
